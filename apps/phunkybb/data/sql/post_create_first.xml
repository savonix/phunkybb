<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="post_create_first">
	<connection>&connection;</connection>
	<params>
		<param name="//runtime/user_id" type="integer"/>
		<param name="//_post/message" type="text" default="10"/>
		<param name="//runtime/timestamp" type="integer"/>
		<param name="//topic_get_id_by_detail/id" type="integer"/>
    <param name="//runtime/site_id" type="integer"/>
	</params>
	<sql>
  INSERT INTO &prefix;posts (poster_id, message, posted, topic_id, site_id) VALUES (?,?,?,?,?)
	</sql>
</query>
