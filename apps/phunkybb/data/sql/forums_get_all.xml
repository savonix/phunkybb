<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="forums_get_all">
    <connection>phunkybb</connection>
    <params>
        <param name="//current_user_id" type="text" default="0"/>
	</params>
    <sql>
        SELECT c.id AS cid, 
        c.cat_name, f.id AS fid, f.forum_name, f.forum_desc, f.redirect_url, f.moderators, 
        f.num_topics, f.num_posts, f.last_post, f.last_post_id, f.last_poster 
        
        FROM &prefix;categories AS c 
        
        INNER JOIN &prefix;forums AS f ON c.id=f.cat_id 
        
        LEFT JOIN &prefix;forum_perms AS fp ON (fp.forum_id=f.id AND fp.group_id=?) 
        WHERE fp.read_forum IS NULL OR fp.read_forum=1 
        
        ORDER BY c.disp_position, c.id, f.disp_position
    </sql>
</query>
