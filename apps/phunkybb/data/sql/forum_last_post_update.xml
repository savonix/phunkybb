<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="forum_last_post_update">
    <connection>&connection;</connection>
    <params>
        <param name="//runtime/timestamp" type="integer" default="0"/>
        <param name="//runtime/username" type="text" default="0"/>
        <param name="//get_last_post_id/id" type="text" default="0"/>
        <param name="//_post/forum_id" type="integer"/>
	</params>
    <sql>
    UPDATE &prefix;forums 
    SET last_post = ?, last_poster = ?, last_post_id = ?
    WHERE id = ?
    </sql>
</query>
