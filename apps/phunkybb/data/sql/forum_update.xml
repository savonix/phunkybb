<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="forum_update">
	<connection>&connection;</connection>
	<params>
		<param name="//_post/cat_id" type="integer"/>
		<param name="//_post/forum_name" type="text"/>
		<param name="//_post/forum_basename" type="text"/>
		<param name="//_post/forum_desc" type="text"/>
		<param name="//_post/fid" type="integer"/>
	</params>
	<sql>
  UPDATE &prefix;forums SET cat_id=?, forum_name=?, forum_basename=?, forum_desc=?
	WHERE id=?
	</sql>
</query>
