<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="forums_update_totals" loop="//forums_get_totals">
    <connection>&connection;</connection>
    <params>
        <param array="//forums_get_totals/total_posts" type="integer" default="0"/>
        <param array="//forums_get_totals/total_topics" type="integer" default="0"/>
        <param array="//forums_get_totals/forum_id" type="integer" default="0"/>
	</params>
    <sql>
        UPDATE &prefix;forums SET num_posts = ?, num_topics = ? WHERE id = ?

    </sql>
</query>
