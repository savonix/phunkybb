<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<!-- 
This is a little more complex so that admin and regular users
both use the same profile query. 
-->
<query name="user_get_profile">
    <connection>phunkybb</connection>
    <params>
        <param name="//html_text" type="text" default="0"/>
        <param name="//runtime/username" type="text" default="0"/>
	</params>
    <sql>
        UPDATE &prefix;users SET signature=?
        WHERE 
        username=?
    </sql>
</query>
