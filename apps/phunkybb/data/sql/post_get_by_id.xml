<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="post_get_by_id">
    <connection>&connection_read;</connection>
    <params>
        <param name="//_get/post_id" type="text" default="0"/>
	</params>
    <sql>
    SELECT u.email, u.signature,
        u.num_posts, u.registered, u.admin_note, p.id, p.poster AS username,
        p.poster_id, p.poster_ip, p.poster_email, p.message,
        p.posted, p.edited,
        p.edited_by, g.g_id, g.g_user_title

    FROM &prefix;posts AS p INNER JOIN &prefix;users AS u ON u.id=p.poster_id

    INNER JOIN &prefix;groups AS g ON g.g_id=u.group_id

    WHERE p.id=?
    </sql>
</query>
