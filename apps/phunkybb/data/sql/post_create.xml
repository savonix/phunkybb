<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="post_create">
    <connection>phunkybb</connection>
    <params>
        <param name="//runtime/username" type="text" default="0"/>
        <param name="//runtime/user_id" type="integer" default="0"/>
        <param name="//runtime/user_ip" type="text" default="0"/>
        <param name="clean_message" type="text" default="10"/>
        <param name="//_post/hide_smilies" type="integer" default="0"/>
        <param name="//runtime/timestamp" type="integer" default="0"/>
        <param name="//_post/topic_id" type="integer" default="0"/>
	</params>
    <sql>
    INSERT INTO &prefix;posts 
    (poster, poster_id, poster_ip, message, hide_smilies, posted, topic_id) 
    VALUES
    (?,?,?,?,?,?,?)
    </sql>
</query>
